begin
  by_cases hf : multipliable f,
  { have h‚ÇÄ : (Œª i, (‚àè' i, f i) - ‚àë j in range i, f j) = Œª i, ‚àè' (k : ‚Ñï), f (k + i),
    { ext1 i,
      rw [sub_eq_iff_eq_add, add_comm, sum_add_tprod_nat_add i hf] },
    have h‚ÇÅ : tendsto (Œª i : ‚Ñï, ‚àè' i, f i) at_top (ùìù (‚àè' i, f i)) := tendsto_const_nhds,
    simpa only [h‚ÇÄ, sub_self] using tendsto.sub h‚ÇÅ hf.has_prod.tendsto_sum_nat },
  { convert tendsto_const_nhds,
    ext1 i,
    rw ‚Üê multipliable_nat_add_iff i at hf,
    { exact tprod_eq_zero_of_not_multipliable hf },
    { apply_instance } }
