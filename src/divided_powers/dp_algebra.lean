/-- The functoriality map between divided power algebras associated with a linear map of the
  underlying modules. Given an `R`-algebra `S`, an `S`-module `N` and `f : M ‚Üí‚Çó[R] N`, this is the
  map `divided_power_algebra R M ‚Üí‚Çê[R] divided_power_algebra S N` that maps `X(n,m)` to `X(n, f m)`.
-/
def lift' : divided_power_algebra R M ‚Üí‚Çê[R] divided_power_algebra S N := 
lift‚Çê (relI R M) _ (lift'_rel_le_ker R S f)

lemma lift'_eq (p : mv_polynomial (‚Ñï √ó M) R) : lift' R S f (mk (relI R M) p) = 
  eval‚ÇÇ (algebra_map R (divided_power_algebra S N)) (Œª nm : ‚Ñï √ó M, dp S nm.1 (f nm.2)) p := 
by simp only [lift', lift‚Çê_apply, lift_mk, alg_hom.coe_to_ring_hom, coe_eval‚ÇÇ_alg_hom]

lemma lift'_eq‚Çê (p : mv_polynomial (‚Ñï √ó M) R) : lift' R S f (mk‚Çê R (relI R M) p) = 
  eval‚ÇÇ (algebra_map R (divided_power_algebra S N)) (Œª nm : ‚Ñï √ó M, dp S nm.1 (f nm.2)) p := 
by rw [mk‚Çê_eq_mk, lift'_eq]

end lift'

