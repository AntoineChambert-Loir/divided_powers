  eval‚ÇÇ (algebra_map R A) (Œª (nm : ‚Ñï √ó M), hI.dpow nm.1 (œÜ nm.2)) p :=
by rw [‚Üê mk‚Çê_eq_mk R, lift_eq‚Çê]

lemma lift_eq‚Çê_X (n : ‚Ñï) (m : M) :
  lift R M hI œÜ hœÜ (mk‚Çê R (relI R M) (X (n, m))) = hI.dpow n (œÜ m) :=
