variable (R)
/-- `dp R n m` is the equivalence class of `X (‚ü®n, m‚ü©)` in `divided_power_algebra R M`. -/
def dp (n : ‚Ñï) (m : M) : divided_power_algebra R M :=
mk‚Çê R (relI R M) (X (‚ü®n, m‚ü©))

lemma dp_eq_mk‚Çê (n : ‚Ñï) (m : M) : dp R n m = (mk‚Çê R (relI R M)) (X ‚ü®n, m‚ü©) := rfl

lemma dp_eq_mk (n : ‚Ñï) (m : M) : dp R n m = (mk (relI R M)) (X (‚ü®n, m‚ü© : ‚Ñï √ó M)) :=
by rw [dp, mk‚Çê_eq_mk]

 -- { rw [dp, mk‚Çê_eq_mk, prod.mk.eta] },

lemma dp_zero (m : M) : dp R 0 m = 1 :=
begin
  rw [dp, mk‚Çê_eq_mk, ‚Üê map_one (ideal.quotient.mk (relI R M)), ideal.quotient.eq],
  exact submodule.subset_span ‚ü®X(0,m), 1, rel.zero, by rw sub_add_cancel‚ü©
end

lemma dp_smul (r : R) (n  : ‚Ñï) (m : M) : dp R n (r ‚Ä¢ m) = r ^ n ‚Ä¢ dp R n m :=
begin
  rw [dp, dp, ‚Üê map_smul, mk‚Çê_eq_mk R, ideal.quotient.eq], 
  exact sub_mem_rel_of_rel rel.smul,
end

lemma dp_mul (n p : ‚Ñï) (m : M) : dp R n m * dp R p m = (n + p).choose n ‚Ä¢ dp R (n + p) m :=
begin
  simp only [dp, mk‚Çê_eq_mk, ‚Üê _root_.map_mul, ‚Üê map_nsmul, ideal.quotient.eq], 
  exact sub_mem_rel_of_rel rel.mul,
end

lemma dp_add (n : ‚Ñï) (x y : M) : dp R n (x + y) = 
  (range (n+1)).sum (Œª k, dp R k x * dp R (n - k) y) := 
begin
  simp only [dp, mk‚Çê_eq_mk, ‚Üê _root_.map_mul, ‚Üê map_sum, ideal.quotient.eq], 
  exact sub_mem_rel_of_rel rel.add,
