lemma lift_rel_le_ker (f : ‚Ñï √ó M ‚Üí A) (hf_zero : ‚àÄ m, f (0, m) = 1)
  (hf_smul : ‚àÄ (n : ‚Ñï) (r : R) (m : M), f ‚ü®n, r ‚Ä¢ m‚ü© = r ^ n ‚Ä¢ f(‚ü®n, m‚ü©)) 
  (hf_mul : ‚àÄ n p m, f ‚ü®n, m‚ü© * f ‚ü®p, m‚ü© = ((n + p).choose n) ‚Ä¢ f ‚ü®n + p, m‚ü©)
  (hf_add : ‚àÄ n u v, f ‚ü®n, u + v‚ü© = (range (n + 1)).sum (Œª (x : ‚Ñï), f ‚ü®x, u‚ü© * f ‚ü®n - x, v‚ü©)) :
  relI R M ‚â§ ring_hom.ker (@eval‚ÇÇ_alg_hom R A (‚Ñï √ó M) _ _ _ f) := 
begin
  rw [relI, of_rel, submodule.span_le],
  rintros x ‚ü®a, b, hx, hab‚ü©,
  rw [eq_sub_iff_add_eq.mpr hab, set_like.mem_coe, ring_hom.mem_ker, map_sub, sub_eq_zero],
  induction hx with m r n m n p m n u v,
  { rw [eval‚ÇÇ_alg_hom_X', map_one, hf_zero] },
  { simp only [eval‚ÇÇ_alg_hom_X', alg_hom.map_smul, hf_smul] },
  { simp only [_root_.map_mul, eval‚ÇÇ_alg_hom_X', nsmul_eq_mul, map_nat_cast, hf_mul] },
  { simp only [coe_eval‚ÇÇ_alg_hom, eval‚ÇÇ_X, eval‚ÇÇ_sum, eval‚ÇÇ_mul, hf_add] },
end

/-- General purpose universal property of `divided_power_algebra R M` -/
def lift_aux (f : ‚Ñï √ó M ‚Üí A) (hf_zero : ‚àÄ m, f (0, m) = 1) 
  (hf_smul : ‚àÄ (n : ‚Ñï) (r : R) (m : M), f ‚ü®n, r ‚Ä¢ m‚ü© = r ^ n ‚Ä¢ f(‚ü®n, m‚ü©)) 
  (hf_mul : ‚àÄ n p m, f ‚ü®n, m‚ü© * f ‚ü®p, m‚ü© = ((n + p).choose n) ‚Ä¢ f ‚ü®n + p, m‚ü©)
  (hf_add : ‚àÄ n u v, f ‚ü®n, u + v‚ü© = (range (n + 1)).sum (Œª (x : ‚Ñï), f ‚ü®x, u‚ü© * f ‚ü®n - x, v‚ü©)) : 
  divided_power_algebra R M ‚Üí‚Çê[R] A :=
lift‚Çê (relI R M) (eval‚ÇÇ_alg_hom R f) (lift_rel_le_ker R M f hf_zero hf_smul hf_mul hf_add)

