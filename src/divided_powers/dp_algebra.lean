/-- The ‚Äúuniversal‚Äù property of divided_power_algebra -/
def lift  : divided_power_algebra R M ‚Üí‚Çê[R] A :=
lift_aux R M (Œª nm, hI.dpow nm.1 (œÜ nm.2)) (Œª m, hI.dpow_zero (hœÜ m)) 
  (Œª n r m, by rw [linear_map.map_smul‚Çõ‚Çó, ring_hom.id_apply, ‚Üê algebra_map_smul A r (œÜ m),
    smul_eq_mul, hI.dpow_smul n (hœÜ m), ‚Üê smul_eq_mul, ‚Üê map_pow, algebra_map_smul]) 
  (Œª n p m, by rw [hI.dpow_mul n p (hœÜ m), ‚Üê nsmul_eq_mul]) 
  (Œª n u v, by rw [map_add, hI.dpow_add n (hœÜ u) (hœÜ v)]) 

